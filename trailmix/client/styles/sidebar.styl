@import 'fiddleware/mixins'
@import 'fiddleware/variables'

#features
  width 100%
  box-sizing border-box

  &.dragover
    background blue

#edit-tabs
  padding 0
  padding-left 15px

.sidebar
  box-shadow 0 0 20px rgba(0,0,0,0.2)

.tab-controls
  $clearfix()
  padding 10px
  border-bottom 1px dotted #eee


#features ul
  list-style-type none
  padding-left 0
  width 100%
  margin 0
  box-sizing border-box

  & li
    font-size 14px
    padding 0 15px
    $clearfix()

    &.selected
      background $blue
      color $white

      &:hover
        background $blue

    &:hover
      cursor pointer
      background #efefef

    & .type
      float left
      line-height 33px
      margin-right 5px

    & .name
      float left
      line-height 33px

    & .controls
      float right

.meta-wrapper
  padding 17px 15px

#edit-tabs-content
  padding 0