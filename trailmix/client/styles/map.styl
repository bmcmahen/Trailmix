@import 'nib'
@import 'fiddleware/variables'

#map
  width 100%
  height 100%
  z-index 500

.editing .leaflet-marker-icon.leaflet-clickable
  cursor move

#editing-view
  position: absolute
  top: 0
  left: 0
  width: 100%
  z-index: 1
  opacity: 1
  height: 100%
  z-index: 1000
  box-shadow: inset 10px 10px 20px rgba(0,0,0,0.3)
  transition-property opacity
  transition-duration 0.5s

.leaflet-marker-icon.leaflet-clickable
  border 5px solid transparent
  border-radius 15px

  &:hover
    border-color black


.leaflet-div-icon
  background white
  border 1px solid !important

#map .leaflet-popup-content-wrapper
  border-radius 3px
  border 1px solid #ccc

#map .leaflet-popup-tip
  width 10px
  height 10px
  background rgb(231, 231, 231)

#map .leaflet-label
  background none
  border none
  color white
  font 13px/20px $bold-font-family
  text-shadow 0 0 3px black
  font-weight bold
  padding 1px 2px

#map .leaflet-label:before
  border-right none
  border-top none
  border-bottom none
  display none
