@import 'nib'
@import 'fiddleware/variables'

#map
  width 100%
  height 100%
  z-index 500

.editing .leaflet-marker-icon.leaflet-clickable
  cursor move

#editing-view
  position: absolute
  top: 0
  left: 0
  width: 100%
  z-index: 1
  opacity: 1
  height: 100%
  z-index: 1000
  box-shadow: inset 10px 10px 20px rgba(0,0,0,0.3)
  transition-property opacity
  transition-duration 0.5s


.leaflet-div-icon
  background white
  border 1px solid !important

#map .leaflet-popup-content-wrapper
  border-radius 3px
  border 1px solid #ccc

#map .leaflet-popup-tip
  width 10px
  height 10px
  background rgb(231, 231, 231)

#map .leaflet-label
  color rgb(49, 49, 49)
  font 11px/15px 'Helvetica neue', arial, sans-serif
  font-weight bold
  padding 1px 7px

#message
  position absolute
  left 0
  right 0
  top 10px
  pointer-events none

  & p
    margin 0 auto
    background rgba(97, 97, 97, 0.74)
    top 0
    left 0
    width 100%
    text-align center
    line-height 35px
    color white
    font-size 13px
    font-weight bold
    font-family 'open sans condensed', 'helvetica neue', arial, sans-serif
    text-shadow 0 1px 1px rgba(0,0,0, 0.3)
    height 35px

.leaflet-marker-icon.parking.leaflet-clickable.leaflet-zoom-animated
  background white
  border-radius 15px
